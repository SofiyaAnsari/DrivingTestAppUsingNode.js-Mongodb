
<%- include('partials/header'); -%>
<body id="g2">
<%- include('partials/navbar'); -%>

<form method="post">
  <h3>Personal Information</h3>
  <hr>
  <div class="row">
      <div class="form-group col-12 col-md-6 col-lg-4">
          <label for="firstname">First Name:</label>
          <input type="text" class="form-control mt-2"
          name="firstname" placeholder="Enter first name" required>
      </div>
      <div class="form-group col-12 col-md-6 col-lg-4">
          <label for="lastname">Last Name:</label>
          <input type="text" class="form-control mt-2" id="lastname" 
          name="lastname" placeholder="Enter last name" required>
      </div>
      <div class="form-group col-12 col-md-6 col-lg-4">
          <label for="LicenseNo">License Number:</label>
          <input type="text" class="form-control mt-2" id="LicenseNo" 
         name="LicenseNo" placeholder="Enter license number" required>
      </div>
      <div class="form-group mt-3 col-12 col-md-6 col-lg-4">
          <label for="Age">Age:</label>
          <input type="number" class="form-control mt-2" id="Age"
          name="Age" placeholder="Enter age" required>
      </div>
      <div class="form-group mt-3 col-12 col-md-6 col-lg-4">
          <label for="dob">Date of Birth:</label>
          <input type="date" class="form-control mt-2" id="dob">
      </div>
  </div>


  <h3 class="mt-4">Car Information</h3>
  <hr>
  <div class="row">
      <div class="form-group col-12 col-md-6 col-lg-4">
          <label for="make">Make:</label>
          <input type="text" class="form-control mt-2" id="make"
          name="make" placeholder="Enter car make" required>
      </div>
      <div class="form-group col-12 col-md-6 col-lg-4">
          <label for="model">Model:</label>
          <input type="text" class="form-control mt-2" id="model"
          name="model" placeholder="Enter car model" required>
      </div>
      <div class="form-group col-12 col-md-6 col-lg-4">
          <label for="year">Year:</label>
          <input type="number" class="form-control mt-2" id="year"
          name="year" placeholder="Enter car year" required>
      </div>
      <div class="form-group col-12 col-md-6 col-lg-4 mt-3">
          <label for="platno">Plate Number:</label>
          <input type="text" class="form-control mt-2" id="platno"
          name="platno" placeholder="Enter plate number" required>
      </div>
  </div>

  <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>

<%- include('partials/footer'); -%>

</body>